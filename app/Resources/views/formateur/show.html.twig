{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formateur</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formateur.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ formateur.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ formateur.firstname }}</td>
            </tr>
            <tr>
                <th>Speciality</th>
                <td>{{ formateur.speciality }}</td>
            </tr>
        </tbody>
    </table>

    <input type="button" class="btn btn-warning" onclick="window.location.href='{{ path('formateur_edit', { 'id': formateur.id }) }}'" value="edit" style="margin: 5px;" />


    {{ form_start(delete_form) }}
    <input type="submit" class="btn btn-danger" value="Delete" style="margin: 5px;"/>
    {{ form_end(delete_form) }}

    <input type="button" class="btn btn-secondary" onclick="window.location.href='{{ path('formateur_index', { 'id': formateur.id }) }}'" value="Back to the list" style="margin: 5px;"/>

{% endblock %}
