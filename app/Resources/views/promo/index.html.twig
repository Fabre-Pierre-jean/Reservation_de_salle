{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promos list</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nbeleves</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.nbEleves }}</td>
                <td>{{ promo.titre }}</td>
                <td>
                    <ul>
                        <input type="button" class="btn btn-primary" onclick="window.location.href='{{ path('promo_show', { 'id': promo.id }) }}'" value="show" style="margin: 5px;"/>

                        <input type="button" class="btn btn-warning" onclick="window.location.href='{{ path('promo_edit', { 'id': promo.id }) }}'" value="edit" style="margin: 5px;" />


                        <input type="submit" class="btn btn-danger" onclick="window.location.href='{{ path('promo_delete', { 'id': promo.id }) }}'" value="delete" style="margin: 5px;"/>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <input type="button" class="btn btn-success" onclick="window.location.href='{{ path('promo_new')}}'" value="New promo" style="margin: 5px;"/>

{% endblock %}
